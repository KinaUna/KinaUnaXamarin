        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="{i18n:Translate Vaccinations}" x:Name="VaccinationsFlyoutItem"
                Icon="{x:Static models:IconFont.Needle}">
        <Tab>
            <ShellContent x:Name="VaccinationsMenuItem"
                          Title="{i18n:Translate Vaccinations}"
                          Icon="{x:Static models:IconFont.Needle}"
