        </Tab>
        <Tab Title="{i18n:Translate About}" x:Name="AboutTabItem"
             Icon="infoicon.png"
             Route="about">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}">
            </ShellContent>
        </Tab>
    </FlyoutItem>
</Shell>
