            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="{i18n:Translate Measurements}" x:Name="MeasurementsFlyoutItem"
                Icon="{x:Static models:IconFont.Ruler}">
        <Tab Title="{i18n:Translate Measurements}" x:Name="MeasurementsTabItem"
             Icon="measurementsicon.png"
             Route="measurements">
            <ShellContent ContentTemplate="{DataTemplate views:MeasurementsPage}">
            </ShellContent>
        </Tab>
        <Tab Title="{i18n:Translate Statistics}" x:Name="MeasurementsStatsTabItem"
             Icon="charticon.png"
             Route="measurementsstats">
