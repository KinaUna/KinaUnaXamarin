        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="{i18n:Translate Skills}" x:Name="SkillsFlyoutItem"
                Icon="{x:Static models:IconFont.School}">
        <Tab>
            <ShellContent x:Name="SkillsMenuItem"
                          Title="{i18n:Translate Skills}"
                          Icon="{x:Static models:IconFont.School}"
