<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="KinaUnaXamarin.Views.AboutPage"
             Title="About">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="25" Padding="15">
                <Image Source="KinaUnaLogo_1536x768.png" Aspect="AspectFit" VerticalOptions="Start"
                       HorizontalOptions="Center" Margin="0, 10, 0, 20" />
                <Label Text="Kina Una for Android - Beta" FontAttributes="Bold"
                       VerticalOptions="Start" 
                       HorizontalOptions="CenterAndExpand" />
                <Label Text="Website:" FontAttributes="Bold" Margin="0, 20, 0, 0"
                       VerticalOptions="Start" 
                       HorizontalOptions="CenterAndExpand" />
                <Label Text="https://www.kinauna.com"
                       VerticalOptions="Start" 
                       HorizontalOptions="CenterAndExpand" />
                <Label Text="Support:" FontAttributes="Bold" Margin="0, 20, 0, 0"
                       VerticalOptions="Start" 
                       HorizontalOptions="CenterAndExpand" />
                <Label Text="support@kinauna.com"
                       VerticalOptions="Start" 
                       HorizontalOptions="CenterAndExpand" />
                <Label Text="Source Code:" Margin="0, 20, 0, 0"
                       HorizontalOptions="Center" LineBreakMode="WordWrap" FontAttributes="Bold"></Label>
                <Label Text="https://github.com/KinaUna/KinaUnaXamarin" HorizontalOptions="Center" LineBreakMode="WordWrap"></Label>
                <Label x:Name="VersionLabel" Margin="0, 20, 0, 0"
                       VerticalOptions="Start" 
                       HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>